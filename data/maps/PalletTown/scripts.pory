    waitmovement(0)
    releaseall
}

script PalletTown_Trigger_BlockPath2{
    lockall
    msgbox("You need a Pokemon to heal it...")
    applymovement (OBJ_EVENT_ID_PLAYER, StopPlayer2)
    waitmovement(0)
    releaseall
}

