script Shadyguy{
    lock
    faceplayer
    msgbox("...you a narc?", MSGBOX_YESNO)
    if(var(VAR_RESULT) == NO){
        message("Good... lets make this quick")
        waitmessage
        pokemart(strangemanmart)
        msgbox("Pleasure doing business")
        release
        end
    }
    else{
    msgbox("Then beat it.", MSGBOX_NPC)
    }
}

mart strangemanmart {
	ITEM_MASTER_BALL
	ITEM_MEGA_RING
	ITEM_RARE_CANDY
	ITEM_MACH_BIKE
	ITEM_ACRO_BIKE
}

